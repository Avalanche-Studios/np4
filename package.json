{
  "name": "p4api",
  "version": "3.2.1",
  "description": "Simple Perforce API",
  "main": "lib/p4api.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --timeout 10000 --require babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --timeout 0 --require babel-core/register --colors -w ./test/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pisamad/p4api.git"
  },
  "keywords": [
    "perforce",
    "p4"
  ],
  "author": "pisamad",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/Pisamad/p4api/issues"
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "acorn": "^6.0.0",
    "bluebird": "^3.5.3",
    "lodash": ">=4.17.11",
    "shelljs": "^0.8.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.14.1",
    "eslint-loader": "^2.1.2",
    "mocha": "^6.0.2",
    "webpack": "^3.10.0",
    "yargs": "^13.2.1"
  }
}
